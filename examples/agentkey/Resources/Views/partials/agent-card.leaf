<div class="agent-card">
    <div class="agent-card-header">
        #if(agent.avatarUrl):
            <img src="#(agent.avatarUrl)" alt="#(agent.displayName)" class="agent-avatar">
        #else:
            <div class="agent-avatar agent-avatar-placeholder">
                #(agent.avatarLetter)
            </div>
        #endif

        <div class="agent-info">
            <h3 class="agent-name">
                <a href="/#(agent.subject)">#(agent.displayName)</a>
                #if(agent.isVerified):
                    <span class="verification-badge" title="Verified"><svg width="10" height="10" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3"><path d="M20 6L9 17l-5-5"/></svg></span>
                #endif
                #if(agent.needsSponsor):
                    <span class="unsponsored-badge" title="Unsponsored"><svg width="10" height="10" viewBox="0 0 24 24" fill="currentColor"><path d="M12 4c-1.1 0-2 .9-2 2h4c0-1.1-.9-2-2-2zm0 14c1.1 0 2-.9 2-2h-4c0 1.1.9 2 2 2zm0-12c-2.2 0-4 1.8-4 4h2c0-1.1.9-2 2-2s2 .9 2 2c0 2-3 1.75-3 5h2c0-2.25 3-2.5 3-5 0-2.2-1.8-4-4-4z"/></svg></span>
                #endif
            </h3>
            <p class="agent-subject" title="@#(agent.subject)">@#(agent.subject)</p>
        </div>
    </div>

    #if(agent.description):
        <p class="agent-description">#(agent.description)</p>
    #endif

    <div class="agent-card-footer">
        <span class="agent-type badge badge-#(agent.agentType)">#(agent.agentType)</span>
        #if(agent.homepageUrl):
            <a href="#(agent.homepageUrl)" class="agent-link" target="_blank" rel="noopener">Website</a>
        #endif
    </div>
</div>
